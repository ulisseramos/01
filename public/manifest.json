{
  "name": "EE - Sistema de Vendas",
  "short_name": "EE",
  "description": "Sistema completo de vendas com integrações e notificações push",
  "start_url": "/",
  "display_override": ["window-controls-overlay"],
  "display": "standalone",
  "background_color": "#020204",
  "theme_color": "#22C55E",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "categories": ["business", "finance", "productivity"],
  "icons": [
    { "src": "/icons/icon-192x192.png", "sizes": "192x192", "type": "image/png", "purpose": "maskable any" },
    { "src": "/icons/icon-512x512.png", "sizes": "512x512", "type": "image/png", "purpose": "maskable any" }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acessar dashboard principal",
      "url": "/dashboard",
      "icons": [{ "src": "/icons/dashboard-96x96.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Produtos",
      "short_name": "Produtos", 
      "description": "Gerenciar produtos e vendas",
      "url": "/produtos",
      "icons": [{ "src": "/icons/products-96x96.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Relatórios",
      "short_name": "Relatórios",
      "description": "Ver relatórios de vendas",
      "url": "/relatorio",
      "icons": [{ "src": "/icons/reports-96x96.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Integrações",
      "short_name": "Integrações",
      "description": "Configurar integrações",
      "url": "/integracao",
      "icons": [{ "src": "/icons/integrations-96x96.png", "sizes": "96x96", "type": "image/png" }]
    }
  ],
  "share_target": {
    "action": "/share-action/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+ee",
      "url": "/?action=%s"
    }
  ]
} 